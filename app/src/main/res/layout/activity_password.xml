<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".password"
    android:background="#98CAFF">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="16dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/Online"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:cardBackgroundColor="#ffec01"
                app:cardCornerRadius="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ઓનલાઇન હાજરી"
                    android:textSize="28sp"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/Exam"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:cardBackgroundColor="#0053ad"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="પરીક્ષા માર્ક એન્ટ્રી"
                    android:textSize="28sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/DISE"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:cardBackgroundColor="#a19ecd"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="આધાર DISE Child ટ્રેકિંગ"
                    android:textSize="26sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/SASG"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:cardBackgroundColor="#FF6D31"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAS Gujarat"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/SAMARTH2"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:cardBackgroundColor="#373382"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAMARTH 2"
                    android:textSize="28sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>